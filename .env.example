# .env.example - Copy this to .env and fill in your actual values

# Session Management
SESSION_SECRET=your_very_strong_random_secret_key_here

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SendGrid (Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key

# Redis (Optional - will use in-memory fallback if not provided)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# Google APIs (Optional)
GOOGLE_GEOCODING_API_KEY=your_google_geocoding_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AI Model Configuration (Optional - auto-detected)
MODEL_BACKEND=auto  # auto, openvino, pytorch
MODEL_DIR=/app/models

# Server Configuration
PORT=8080
NODE_ENV=production
DEBUG_ENV=false

# Public URL of the deployed web frontend
# On Render this is provided as RENDER_EXTERNAL_URL
# On Railway it may be RAILWAY_PUBLIC_DOMAIN
RENDER_EXTERNAL_URL=https://your-web-service.railway.app

# API Endpoint Configuration
# Private endpoint (internal Railway network)
HAZARD_API_URL_PRIVATE=http://ideal-learning.railway.internal:8080
# Public endpoint (external access)
HAZARD_API_URL_PUBLIC=https://hazard-api-production-production.up.railway.app
# Local development endpoint
HAZARD_API_URL_LOCAL=http://localhost:8080
# Endpoint selection strategy: auto | true | false
# auto = try private first, fallback to public
# true = force private only
# false = force public only
# Note: NODE_ENV=development always uses LOCAL endpoint
HAZARD_USE_PRIVATE=auto

SESSION_SECRET=change-me

# Redis (choose one style)
REDIS_URL=redis://:password@host:6379
# or:
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend origin (comma separated) if client runs on a different domain
CLIENT_ORIGIN=https://your-frontend.example

# Set to true if client and server are on different sites and you need cross-site cookies
CROSS_SITE_COOKIES=false

NODE_ENV=production
