# =============================================================================
# HAZARD-DETECTION STANDALONE CONFIGURATION
# =============================================================================
# Copy this to .env and configure according to your needs
# All features work offline by default - enable integrations as needed

# Core Application Settings
NODE_ENV=development
PORT=3000
DEBUG_ENV=false

# =============================================================================
# FEATURE FLAGS - Control optional integrations
# =============================================================================

# Remote API Integration (optional accelerator)
# When enabled, app will use remote API for faster inference when available
ENABLE_REMOTE_API=false
REMOTE_API_URL=https://hazard-api-production-production.up.railway.app

# Redis Integration (optional session store & caching)
# When enabled, sessions and cache will use Redis instead of memory
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Authentication (optional OAuth)
# When enabled, users can sign in with Google accounts
ENABLE_GOOGLE_AUTH=false
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Google Maps Geocoding (server-side only)
GOOGLE_MAP_GEOCODE=your_google_geocoding_api_key

# Cloud Storage (optional S3/GCS integration)  
# When enabled, images will be stored in cloud bucket
ENABLE_CLOUD_STORAGE=false
UPLOAD_BUCKET_URL=https://storage.googleapis.com/your-bucket
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Cloudinary (image upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# LOCAL FALLBACK SETTINGS - Always available
# =============================================================================

# Local file storage (used when cloud storage disabled)
UPLOAD_DIR=./uploads

# Session security (always required)
SESSION_SECRET=change-this-in-production-make-it-very-long-and-random

# =============================================================================
# PERFORMANCE BUDGETS & TARGETS
# =============================================================================

# Local detection performance targets
LOCAL_FPS_TARGET=30
MODEL_LOAD_TIMEOUT_MS=10000

# Dashboard responsiveness
DASHBOARD_STALENESS_MS=1000
DASHBOARD_UPDATE_INTERVAL_MS=500

# Remote API health checking (when enabled)
REMOTE_HEALTH_CHECK_INTERVAL_MS=5000
REMOTE_TIMEOUT_MS=5000
REMOTE_RETRY_ATTEMPTS=3

# =============================================================================
# CLIENT-SIDE CONFIGURATION
# =============================================================================

# Frontend origin settings for CORS
CLIENT_ORIGIN=http://localhost:3000

# Cross-site cookie settings (usually false for standalone)
CROSS_SITE_COOKIES=false

# =============================================================================
# LEGACY COMPATIBILITY (for existing deployments)
# =============================================================================

# Railway deployment compatibility
HAZARD_API_URL_PRIVATE=http://ideal-learning.railway.internal:8080
HAZARD_API_URL_PUBLIC=https://hazard-api-production-production.up.railway.app
HAZARD_API_URL_LOCAL=http://localhost:8080
HAZARD_USE_PRIVATE=auto

# External URL (for callbacks and redirects)
RENDER_EXTERNAL_URL=https://your-app.railway.app
