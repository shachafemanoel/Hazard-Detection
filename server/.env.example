# Redis Configuration - הגדרות Redis מקומי
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Secret - מפתח סודי לסשן (שנה למפתח אמיתי)
SESSION_SECRET=change-this-to-a-very-secure-random-string-for-production

# Google OAuth (אופציונלי - רק אם רוצה התחברות עם Google)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Google Maps API (נדרש למפות)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# SendGrid (לאיפוס סיסמאות - אופציונלי)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Cloudinary (להעלאת תמונות - נדרש לשמירת דיווחים)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Environment Settings
NODE_ENV=development
PORT=3000

# Google Geocoding (לזיהוי כתובות - אופציונלי)
GOOGLE_GEOCODING_API_KEY=your-google-geocoding-api-key-here