{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE", 
    "dockerfilePath": "web/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node routes/server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ALWAYS"
  },
  "variables": {
    "NODE_ENV": "production",
    "API_URL": "${{api-service.RAILWAY_PUBLIC_DOMAIN}}"
  }
}