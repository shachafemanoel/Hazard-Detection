{
  "name": "hazard-detection",
  "version": "1.0.0",
  "description": "Hazard Detection Project",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "build": "npm install && echo 'Building frontend assets...' && echo 'Build complete!'",
    "install-python-deps": "source venv/bin/activate && python3 -m pip install -r requirements.txt",
    "start": "node server/server.js",
    "start-full": "npm run start-backend && npm run start-frontend",
    "start-backend": "cd server && source ../venv/bin/activate && python3 start_backend.py &",
    "start-frontend": "node server/server.js",
    "check-env": "node scripts/check-environment.js",
    "dev": "npm run start-backend && nodemon --watch server --ignore public/object_detecion_model server/server.js",
    "dev-python": "cd server && source ../venv/bin/activate && python3 start_backend.py",
    "dev-local": "npm run build && npm run start-full",
    "render-build": "npm install",
    "render-start": "node server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@sendgrid/mail": "^8.1.5",
    "cloudinary": "^2.6.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.1",
    "mime": "2.6.0",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "onnxruntime-node": "^1.22.0",
    "onnxruntime-web": "^1.22.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.7.1",
    "sharp": "^0.34.2",
    "streamifier": "^0.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7"
  }
}
